<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Modules.RETracker.View.REtrackerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_cardbg">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_size_16dp"
                android:src="@drawable/back_button_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rubik_bold"
                android:text="RE Activity"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_size_16dp"
                android:src="@drawable/ic_logout" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font_24"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/font_10"
                android:background="@drawable/rounded_stroke_rectangle_red"
                android:padding="@dimen/margin_size_12dp">

                <Spinner
                    android:id="@+id/sp_ReActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:minHeight="48dp"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothambold"
                    android:text="Start Activity"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/button_yellow_bg"
                    android:textSize="@dimen/font_20" />

                <TextView
                    android:id="@+id/tv_end_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_50dp"
                    android:background="@drawable/button_yellow_shadow"
                    android:fontFamily="@font/gothambold"
                    android:gravity="center"
                    android:paddingBottom="@dimen/font_10"
                    android:text="End Activity"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/gray_808080"
                    android:textSize="@dimen/font_20" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_startRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_25dp"
                android:background="@drawable/rounded_stroke_rectangle_red"
                android:fontFamily="@font/gothambold"
                android:gravity="top"
                android:hint="Starting Activity remarks"
                android:lines="4"
                android:visibility="visible"
                android:padding="@dimen/margin_size_20dp"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/et_endRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_25dp"
                android:background="@drawable/rounded_stroke_rectangle_red"
                android:fontFamily="@font/gothambold"
                android:gravity="top"
                android:hint="End Activity remarks"
                android:lines="4"
                android:visibility="gone"
                android:textColor="@color/gray_2C2C2C"
                android:padding="@dimen/margin_size_20dp"
                android:textSize="@dimen/text_size_16sp" />


            <RelativeLayout
                android:id="@+id/tv_confirm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/curved_red_bg"
                android:fitsSystemWindows="true"
                android:layout_gravity="center"
                android:padding="@dimen/margin_size_16dp"
                android:visibility="gone"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothambold"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_20" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</layout>